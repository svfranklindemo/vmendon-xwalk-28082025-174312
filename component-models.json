  {
    "id": "dm-asset",
    "fields": [
        {
          "component": "select",
          "name": "delivery_Type",
          "value": "na",
          "label": "Delivery Type",
          "description": "'Dynamic Media' will be rendered by providing dynamic media server URL. 'Dynamic Media with OpenAPI' will use openAPI delivery with additional options to manipulate the image rendering on the fly.",
          "valueType": "string",
          "options": [
            {
              "name": "--Select Delivery Type--",
              "value": "na"
            },
            {
              "name": "Dynamic Media",
              "value": "dm"
            },
            {
              "name": "Dynamic Media with OpenAPI",
              "value": "dm-openapi"
            }
          ]
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Image",
          "multi": false,
          "description": "Select AEM DAM repository from asset selector if using Delivery Type as Dynamic Media. Select DM delivery repository from asset selector if using Delivery Type as Dynamic Media with OpenAPI",
          "required": true
        },        
        {
          "condition": {
            "===": [{ "var": "delivery_Type" }, "dm"]
          },
            "component": "text",
            "name": "dmUrl",
            "value": "https://smartimaging.scene7.com/is/image/DynamicMediaNA",
            "label": "Dynamic Media URL",
            "valueType": "string"
        },
        {
          "condition": {
            "===": [{ "var": "delivery_Type" }, "dm-openapi"]
          },
          "component": "select",
          "name": "rotation",
          "value": "",
          "label": "Rotation",
          "description": "Select the rotation which will rotate the image.",
          "valueType": "string",
          "options": [
            {
              "name": "None",
              "value": ""
            },
            {
              "name": "30",
              "value": "30"
            },
            {
              "name": "45",
              "value": "45"
            },
            {
              "name": "60",
              "value": "60"
            },
            {
              "name": "90",
              "value": "90"
            },
            {
              "name": "120",
              "value": "120"
            },
            {
              "name": "160",
              "value": "160"
            },
            {
              "name": "180",
              "value": "180"
            },
            {
              "name": "230",
              "value": "230"
            },
            {
              "name": "270",
              "value": "270"
            },
            {
              "name": "300",
              "value": "300"
            },
            {
              "name": "330",
              "value": "330"
            }
          ]
        },
        {
          "condition": {
            "===": [{ "var": "delivery_Type" }, "dm-openapi"]
          },
          "component": "select",
          "name": "flip",
          "value": "",
          "label": "Flip",
          "description": "Select the flip for the image either vertical or horizontal or vertical & horizontal",
          "valueType": "string",
          "options": [
            {
              "name": "None",
              "value": ""
            },
            {
              "name": "Vertical",
              "value": "v"
            },
            {
              "name": "Horizontal",
              "value": "h"
            },
            {
              "name": "Horizontal & Vertical",
              "value": "hv"
            }
          ]
        },
        {
          "condition": {
            "===": [{ "var": "delivery_Type" }, "dm-openapi"]
          },
          "component": "text",
          "name": "crop",
          "value": "",
          "label": "Crop",
          "description": "Crop the final image using four values: left, top, width, and height, all in percentages. For example, 10p,10p,50p,50p means crop the image starting 10% from the left and top, and take 50% of the image's width and height.",
          "valueType": "string"
        },
        {
            "component": "text",
            "name": "dm_alttext",
            "label": "Alt Text",
            "valueType": "string"
        }
    ]
  },
  {
    "id": "dm-template",
    "fields": [
        {
          "component": "select",
          "name": "config_source",
          "value": "inline",
          "label": "Template Config Source",
          "description": "Choose the source to provide the template path and variable configurations.",
          "valueType": "string",
          "options": [
            {
              "name": "Content Fragment",
              "value": "cf"
            },
            {
              "name": "Inline",
              "value": "inline"
            }
          ]
        },
        {
          "condition": {
            "===": [{ "var": "config_source" }, "inline"]
          },
          "component": "text",
          "name": "dm_template_url",
          "label": "Template Path",
          "description": "Provide full URL for the Dynamic Media Template. Templates should have variables which can be configured in Variable Mappings field.",
          "valueType": "string"
        },
        {
          "condition": {
            "===": [{ "var": "config_source" }, "inline"]
          },          
          "component": "text",
          "valueType": "string",
          "name": "var_mapping",
          "value": "",
          "multi": true,
          "label": "Variable Mappings",
          "description": "Provide variable values. These values should be exposed in the DM template inorder to get replaced e.g. $leftImage=DynamicMediaNA/adobestock-167833331"
        },
        {
          "condition": {
            "===": [{ "var": "config_source" }, "cf"]
          },
          "component": "aem-content",
          "name": "reference",
          "label": "Reference",
          "valueType": "string",
          "required": true,
          "validation": {
              "rootPath": "/content/dam"
          }
        }
      ]
  }
